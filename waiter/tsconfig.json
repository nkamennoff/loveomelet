{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./app/*"],
      "@shared/*": ["./shared/*"],
      "@server/*": ["./server/*"],
    }
  }
}
